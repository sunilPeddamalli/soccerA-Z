<% layout('/layout/boilerplate') %> 
<body>
    <div class="row">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a class="btn btn-info me-md-2" href='/matches/new'>Add New Match</a>
          </div>
        <div class="col-6 offset-3">     
                <% for(let i=matches.length-1; i>=0; i--){ %> 
                    <div class="list-group ">
                        <a href="/matches/<%= matches[i]._id %>" class='list-group-item list-group-item-action btn btn-outline-info'>
                            <div class='d-flex justify-content-between'>
                                <small class="text-muted badge rounded-pill bg-light"><%= matches[i].title %> </small>
                                <small class="text-muted badge rounded-pill bg-light"><%= matches[i].date %> </small>    
                            </div>                        
 
                            <div class='text-center'> 
                                <span class="row m-0">                            
                                        <span class="col-5 p-0 d-flex justify-content-end">
                                            <span class="px-2"><%= matches[i].team1 %></span> 
                                        </span>
                                        <span class="col-2">
                                            <span class='text-light bg-success px-1'><%= matches[i].score1 %> - <%= matches[i].score2 %> </span>
                                        </span>
                                        <span class="col-5 p-0 d-flex justify-content-start">
                                            <span class="px-2"><%= matches[i].team2 %></span>     
                                        </span>                           
                                </span>        
                            </div>
                          </a>
                    </div>
                <% } %>                   
        </div>
    </div>
</body>
