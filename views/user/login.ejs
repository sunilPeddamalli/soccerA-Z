<% layout('/layout/boilerplate') %> 

<body>
    <div class="d-flex justify-content-center align-items-center">
      <div class="row mt-1">
        <div class="col">
           <div class="card " style="width: 18rem;">
            <img src="https://media.istockphoto.com/photos/football-soccer-ball-on-grass-field-on-stadium-picture-id1312143573?b=1&k=20&m=1312143573&s=170667a&w=0&h=elVyz2oeGbXKnNpc86chC4DJQ_FPWkE_v9n9uuOhhqY=" class="card-img-top" alt="...">
          
            <div class="card-body">
              <form action="/login" method="POST" class="validate-form" novalidate>
                <div class="mb-3">
                  <label for="username" class="form-label text-dark "></label>
                    <input type="text" class="form-control" id="username" name = 'username' placeholder="Enter Username" required>                    
                </div>

                <div class="mb-3">
                  <label for="password" class="form-label text-dark "></label>
                    <input type="password" class="form-control" id="password" name = 'password' placeholder="Enter Password" required>                    
                </div>

                <div class="mb-3 text-center">
                  <button class='btn btn-success form-control'>Login</button>
              </div>   
            </form>
            </div>
          </div>

            
        </div>
    </div>   
    </div>
   
</body>